<%- model_class = Project -%>
<div class="page-header">
  <h1><%= @project.title %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @project.description %></dd>
  <dt><strong>Project Members</strong></dt>
  <dd><%= render 'project_members', :project_members => @project_members %></dd>
</dl>

<div class="form-actions">
  <% if @project.user_id == current_user.id %>
    <%= render 'links_if_user_is_owner_of_project', :project => @project %>
   
  <% else %>
    <%= link_to 'View Tickets', user_project_tickets_path(@user, @project), :class => 'btn' %>
  <% end %>
</div>
