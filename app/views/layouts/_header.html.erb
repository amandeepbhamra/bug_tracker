<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">
            
            <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
            
            <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            
            <!-- Be sure to leave the brand out there if you want it shown -->
        
            <%= link_to_if(user_signed_in?, "Bug Tracker", current_user, :class => "brand" ) do link_to "Bug Tracker", new_user_session_path, :class => "brand" end %>
            
            <div class="nav-collapse collapse">
                <% if user_signed_in? %>
                    <ul class="nav">
                        <div class="btn-group">
                            <%= link_to 'Projects', user_projects_path(current_user),:class => 'btn' %>
                            <button class="btn dropdown-toggle" data-toggle="dropdown">
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu">
                                <% if !current_user.projects.blank? %>
                                    <% current_user.projects.each do |project| %>
                                        <li>
                                            <%= link_to project.title, project_tickets_path(project) %>
                                        </li>
                                    <% end %>
                                <% end %>
                            </ul>
                        </div>
                    </ul>
                    <ul class="nav pull-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle " data-toggle="dropdown">Edit Profile <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>
                                    <% if user_signed_in? %>
                                        <a href="<%= user_url(current_user) %>">
                                            <div class="editprofile_userpic img-polaroid">
                                                <%= image_tag(current_user.photo.url(:thumb)) %> 
                                            </div>
                                            <h5 class="fullname">
                                                <%= current_user.name %>
                                            </h5>
                                        </a>
                                        <%= link_to 'Edit Profile', edit_user_path(current_user) %>
                                        <%= link_to 'Change Password', edit_user_password_path %>
                                        <%= link_to 'Invite Member', new_user_invitation_path %>
                                    <% end %>
                                </li>
                                <li class="divider"></li>
                                <li>
                                    <%= link_to "Sign out", destroy_user_session_path, 
                                    :method => :delete %>
                                </li>
                            </ul>
                        </li>
                    </ul>
                <% end %>
            </div>
            <!-- Everything you want hidden at 940px or less, place within here -->
        </div>
    </div>
</div>