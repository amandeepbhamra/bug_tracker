<!DOCTYPE html>
<html>
	<head>
  		<title>Lighthouseapp</title>
  		<%= stylesheet_link_tag    "application", :media => "all" %>
  		<%= javascript_include_tag "application" %>
  		<%= csrf_meta_tags %>
		<%= yield :head %>
	</head>

	<body>
		<%= render 'layouts/header' %>

		<div class="container">
			<% if user_signed_in? %>
				<div class="page-header">
	    			<h3>Hi <%= link_to @user.name, @user %>,</h3>
	  			</div>
				<%= render 'layouts/tabs' %>
			<% end %>
			<% unless flash[:notice].blank? %>
				<div class="alert alert-info">
					<button type="button" class="close" data-dismiss="alert">&times;</button>
					<div id='notice' style="<%= 'display: none; ' if flash[:notice].blank? %> text-align: center;">
		        		<%= flash[:notice].html_safe  unless flash[:notice].blank? %>
		      		</div><!-- notice -->
		 
		      		<div id='error' style="<%= 'display: none;' if flash[:error].blank? %>  text-align: center;">
		        		<%= flash[:error].html_safe  unless flash[:error].blank? %>
		      		</div>
	      		</div>
	      	<% end %>
			<%= yield %>
		</div>
	</body>
</html>
