<!DOCTYPE html>
<html>
	<head>
  		<title>Lighthouseapp</title>
  		<%= stylesheet_link_tag    "application", :media => "all" %>
  		<%= javascript_include_tag "application" %>
  		<%= csrf_meta_tags %>
		<%= yield :head %>
	</head>

	<body>
		<p>
			<% if user_signed_in? %>
				<h2><%= link_to 'Dashboard', current_user %></h2>
				<%= link_to 'Sign Out', destroy_user_session_path, method: :delete %>
			<% end %>
		</p>

		<%= yield %>

	</body>
</html>
