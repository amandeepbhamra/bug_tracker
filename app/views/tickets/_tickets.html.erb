<tr>
    <td>
        <strong>
          <%= link_to ticket.title, project_ticket_path(ticket.project_id, ticket) %>
        </strong>
    </td>
    <td><%= ticket.description %></td>
    <td><%= ticket.ticket_status %></td>
    <td><%= project(ticket.project_id).title %></td>
    <% if !(user(ticket.assigned_to).nil?) %>
      <td><%= user(ticket.assigned_to).name %></td>
    <% else %>
      <td><%= "No one" %></td>
    <% end %>
    <td><%= event_time_format(ticket.created_at) %></td>    
</tr>