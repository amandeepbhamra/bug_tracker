<p id="notice"><%= notice %></p>

<p>
  <b>Title:</b>
  <%= @ticket.title %>
</p>

<p>
  <b>Description:</b>
  <%= @ticket.description %>
</p>

<p>
  <b>Status:</b>
  <%= @ticket.ticket_status %>
</p>

<p>
  <b>who's Responsible:</b>
  <% if !(User.find_by_id(@ticket.assigned_to).nil?) %>
    <td><%= User.find_by_id(@ticket.assigned_to).email %></td>
  <% else %>
    <td><%= "No one" %></td>
  <% end %>
</p>


<% if @ticket.document.blank? %>
	<b>No Attachment</b><br />
<% else %>
    <b>Document Attached</b>
	<%= link_to 'Download', @ticket.document.url(:original, false) %><br />
<% end %>

<p>
  <b>Comments:</b>
  <% @comments.each do |comment| %>
    <%= comment.content %> <b>by:</b>
    <%= comment.commentor %>
  <% end %>
</p>

<%= link_to 'New Comment', new_ticket_comment_path(@ticket_id) %><br />
<%= link_to 'Edit Ticket', edit_user_project_ticket_path(@user, @project, @ticket) %> |
<%= link_to 'Back To Tickets', user_project_tickets_path(@user, @project) %>
