<%- model_class = Ticket -%>

<h4>Search Tickets:</h4>

<%#= render 'search_form' %>
<%= render 'links_status_tickets' %>

<% if @ticket.blank? %>

  <table class="table table-striped">
    <h5>All Tickets</h5>
    <thead>
      <%= render 'thead_for_tickets' %>
    </thead>
    <tbody>
      <% @tickets.each do |ticket| %>
        <%= render 'tickets', :ticket => ticket %>
      <% end %>
    </tbody>
  </table>
  <div class="pagination pagination-centered pagination-small">
    <%= will_paginate @tickets %>
  </div>
<% else %>
  <h5>No tickets has been created yet.</h5>
  <br />
<% end %>

<br />

<%= render 'user_assigned_tickets' %>
 