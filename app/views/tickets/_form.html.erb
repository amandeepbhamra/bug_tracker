<%= form_for [@user, @project, @ticket], :html => { :multipart => true } do |f| %>
  <% if @ticket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@ticket.errors.count, "error") %> prohibited this ticket from being saved:</h2>

      <ul>
      <% @ticket.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :status %><br />
    <%= f.collection_select :status, Ticket.ticket_status_array, :first, :last %>
  </div>
  <div class="field">
    <%= f.label :assigned_to %><br />
    <%= f.collection_select :assigned_to, @project.members, :id, :email %>
  </div>
  <div class="field">
    <%= f.label :Attachment %><br />
    <%= f.file_field :document %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
